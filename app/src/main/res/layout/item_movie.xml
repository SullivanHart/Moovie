<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/selectableItemBackground"
    android:orientation="vertical"
    android:padding="8dp">

    <ImageView
        android:id="@+id/movie_item_poster"
        android:layout_width="60dp"
        android:layout_height="90dp"
        android:background="#757575"
        android:scaleType="centerCrop"
        android:src="@drawable/movie_placeholder" />

    <TextView
        android:id="@+id/movie_item_title"
        style="@style/AppTheme.Subheader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/movie_item_poster"
        android:layout_marginBottom="4dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="-2dp"
        android:layout_toRightOf="@+id/movie_item_poster"
        android:ellipsize="end"
        android:maxLines="1"
        tools:text="Inception" />

    <me.zhanghai.android.materialratingbar.MaterialRatingBar
        android:id="@+id/movie_item_rating"
        style="@style/Widget.MaterialRatingBar.RatingBar.Indicator.Small"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/movie_item_title"
        android:layout_below="@+id/movie_item_title"
        android:layout_marginBottom="4dp" />

    <TextView
        android:id="@+id/movie_item_num_ratings"
        style="@style/AppTheme.Caption"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/movie_item_rating"
        android:layout_alignTop="@+id/movie_item_rating"
        android:layout_marginLeft="4dp"
        android:layout_toRightOf="@+id/movie_item_rating"
        android:gravity="center_vertical"
        android:textColor="@color/greyDisabled"
        tools:text="(124)" />

    <TextView
        android:id="@+id/movie_item_genre"
        style="@style/AppTheme.Body1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/movie_item_title"
        android:layout_below="@+id/movie_item_rating"
        android:textColor="@color/greySecondary"
        tools:text="Sci-Fi" />

    <TextView
        android:id="@+id/movie_item_year_divider"
        style="@style/AppTheme.TextDivider"
        android:layout_alignTop="@+id/movie_item_genre"
        android:layout_toRightOf="@+id/movie_item_genre"
        android:text="@string/divider_bullet" />

    <TextView
        android:id="@+id/movie_item_year"
        style="@style/AppTheme.Body1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/movie_item_genre"
        android:layout_toRightOf="@+id/movie_item_year_divider"
        android:textColor="@color/greySecondary"
        tools:text="2010" />

</RelativeLayout>
